<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Safety & Emergency Hub</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <!-- Header -->
    <div class="hero-bg">
      <header class="header">
        <div class="container">
          <!-- Logo -->
          <div class="logo">SafeHub</div>

          <!-- Nav Links -->
          <nav class="nav-links" id="nav-menu">
            <button class="close-menu" id="close-menu">X</button>
            <a href="/alerts.html">Alerts</a>
            <a href="/tips.html">Safety Tips</a>
            <a href="/contacts.html">Contact Us</a>
            <a href="/volunteer.html">Volunteers</a>
            <!-- Auth Buttons -->
            <div class="auth-buttons-mobile">
              <% if (session && session.user) { %>
              <span class="welcome-msg"
                >Welcome, <%= session.user.username %></span
              >
              <form action="/logout" method="POST" style="display: inline">
                <button class="btn-outline">Log Out</button>
              </form>
              <% } else { %>
              <button class="btn-outline" onclick="openModal('loginModal')">
                Log In
              </button>
              <button class="btn-fill" onclick="openModal('signupModal')">
                Sign Up
              </button>
              <% } %>
            </div>
          </nav>
          <div class="auth-buttons">
            <% if (session && session.user) { %>
            <span class="welcome-msg"
              >Welcome, <%= session.user.username %></span
            >
            <form action="/logout" method="POST" style="display: inline">
              <button class="btn-outline">Log Out</button>
            </form>
            <% } else { %>
            <button class="btn-outline" onclick="openLoginModal()">
              Log In
            </button>
            <button class="btn-fill" onclick="openSignupModal()">
              Sign Up
            </button>
            <% } %>
          </div>

          <button class="menu-toggle" id="menu-toggle">‚ò∞</button>
        </div>
      </header>

      <!-- Landing Section -->
      <section class="landing">
        <div class="landing-text">
          <h1>Stay Informed. Stay Safe.</h1>
          <p>
            Report emergencies, request help, volunteer, and learn safety tips
            all in one place.
          </p>
        </div>
      </section>
      <main>
        <section class="section alerts">
          <h2>üö® Latest Alerts</h2>
          <div class="alerts-grid">
            <% if (alerts && alerts.length > 0) { %> <% alerts.forEach(alert =>
            { %>
            <div class="alert">
              <strong><%= alert.title %></strong> ‚Äì <%= alert.description %> <%
              if (alert.severity) { %>
              <span
                class="severity"
                style="color: <%= alert.severity === 'high' ? 'red' : alert.severity === 'medium' ? 'orange' : 'yellow' %>;"
              >
                (<%= alert.severity %>)
              </span>
              <% } %>
            </div>
            <% }) %> <% } else { %>
            <div class="alert">No active alerts at this time.</div>
            <% } %>
          </div>
        </section>

        <section class="section contacts">
          <h2>üìû Emergency Contacts</h2>
          <div class="contacts-grid">
            <% if (contacts && contacts.length > 0) { %> <%
            contacts.forEach(contact => { %>
            <div class="contact-card">
              <%= contact.service_name %>: <%= contact.phone_number %>
            </div>
            <% }) %> <% } else { %>
            <div class="contact-card">No contacts available.</div>
            <% } %>
          </div>
        </section>

        <section class="section volunteer">
          <h2>ü§ù Become a Volunteer</h2>
          <p>
            Want to help during emergencies? Join our community of responders.
          </p>
          <button>Become a Volunteer</button>
        </section>

        <section class="section tips">
          <h2>üí° Safety Tip of the Day</h2>
          <% if (tip && tip.title) { %>
          <p><strong><%= tip.title %></strong>: <%= tip.description %></p>
          <% } else { %>
          <p>No safety tips available.</p>
          <% } %>
        </section>
      </main>
    </div>
    <!-- Login Modal -->
    <div id="loginModal" class="modal">
      <div class="modal-content">
        <span class="close" onclick="closeModal('loginModal')">&times;</span>
        <h2>Login</h2>
        <form action="/login" method="POST">
          <input type="email" name="email" placeholder="Email" required />
          <input
            type="password"
            name="password"
            placeholder="Password"
            required
          />
          <button type="submit">Log In</button>
        </form>
      </div>
    </div>

    <!-- Sign Up Modal -->
    <div id="signupModal" class="modal">
      <div class="modal-content">
        <span class="close" onclick="closeModal('signupModal')">&times;</span>
        <h2>Sign Up</h2>
        <form action="/signup" method="POST">
          <input type="text" name="username" placeholder="Full Name" required />
          <input type="email" name="email" placeholder="Email" required />
          <input
            type="password"
            name="password"
            placeholder="Password"
            required
          />
          <button type="submit">Sign Up</button>
        </form>
      </div>
    </div>
    <footer class="footer">
      <p>¬© 2025 SafeHub. All rights reserved.</p>
    </footer>
    <script src="/js/script.js"></script>
  </body>
</html>
