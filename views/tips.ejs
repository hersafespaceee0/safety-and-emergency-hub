<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Safety Tips - Safety & Emergency Hub</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    .hero-bg{
      background-image: url(/images/safety\ tips.jpg);
    }
  </style>
</head>
<body>
  <div class="hero-bg">
    <%- include('partials/header') %>
    <section class="landing">
      <div class="landing-text">
        <h1>Learn to Stay Safe</h1>
        <p>Explore safety tips to prepare for emergencies.</p>
      </div>
    </section>
    <main>
      <section class="section tips">
        <h2>ðŸ’¡ Safety Tips</h2>
        <form class="filter-form" action="/tips" method="GET">
          <label for="category">Filter by Category:</label>
          <select name="category" id="category">
            <option value="">All</option>
            <% if (categories && categories.length > 0) { %>
              <% categories.forEach(cat => { %>
                <option value="<%= cat %>" <% if (category === cat) { %>selected<% } %>><%= cat %></option>
            <% } %>
          </select>
          <button type="submit" class="btn-fill">Apply Filter</button>
        </form>
        <div class="tips-grid">
          <% if (tips && tips.length > 0) { %>
            <% tips.forEach(tip => { %>
              <div class="tip">
                <strong><%= tip.title %></strong>
                <p><%= tip.description %></p>
                <% if (tip.category) { %>
                  <p><small>Category: <%= tip.category %></small></p>
                <% } %>
                <button class="btn-outline share-tip" onclick="alert('Share feature coming soon!')">Share Tip</button>
              </div>
            <% }) %>
          <% } else { %>
            <div class="tip">No safety tips available.</div>
          <% } %>
        </div>
      </section>
    </main>
  </div>
  <footer class="footer">
    <p>Â© 2025 SafeHub. All rights reserved.</p>
  </footer>
  <script src="/js/script.js"></script>
</body>
</html>